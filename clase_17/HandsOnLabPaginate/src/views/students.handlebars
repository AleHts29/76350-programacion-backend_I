{{#if isValid}}
<div>
    {{!-- Data renderizada de la DB --}}
    {{#each docs}}
    <div>
        <p>Nombre: {{this.first_name}}</p>
        <p>Apellido: {{this.last_name}}</p>
        <p>Grupo: {{this.group}} &nbsp; Calificaci√≥n: {{this.grade}}</p>
    </div>
    <br>
    {{/each}}
</div>

{{!-- Renderizado de los links de navegacion --}}
<div>
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior </a>
            {{/if}}

            {{!-- numero de pagina --}}
            &nbsp;
            {{this.page}}
            &nbsp;

            {{#if hasNextPage}}
            <a href={{this.nextLink}}>
                >> Siguiente</a>
            {{/if}}

</div>

{{else}}
<h1>No hay data para mostrar</h1>
{{/if}}